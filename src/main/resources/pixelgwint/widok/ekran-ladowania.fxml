<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?> <?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootLoadingPane" prefHeight="720.0" prefWidth="1280.0"
            style="-fx-background-color: #1c1c1c;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pixelgwint.widok.KontrolerEkranuLadowania">
    <children>
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <AnchorPane.bottomAnchor>20.0</AnchorPane.bottomAnchor>
            <AnchorPane.rightAnchor>20.0</AnchorPane.rightAnchor>
            <padding>
                <Insets top="5.0" bottom="5.0" left="5.0" right="5.0"/>
            </padding>
            <children>
                <ImageView fx:id="loadingAnimationImageView" fitHeight="50.0" fitWidth="50.0" preserveRatio="true"/>
                <Label fx:id="statusLadowaniaLabel" text="Wczytywanie..." textFill="lightgrey"> <font>
                    <Font name="System Italic" size="14.0" />
                </font>
                </Label>
            </children>
        </HBox>
    </children>
</AnchorPane>