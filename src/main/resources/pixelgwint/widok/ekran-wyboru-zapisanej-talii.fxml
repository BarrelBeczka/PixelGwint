<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootWyboruZapisanejTaliiPane" alignment="CENTER" prefHeight="500.0" prefWidth="700.0" spacing="15.0" style="-fx-background-color: #3c3c3c;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pixelgwint.widok.KontrolerWyboruZapisanejTalii">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label fx:id="etykietaTytulowaWyboruTalii" text="Wybierz Talię dla Gracza X" textFill="white">
            <font>
                <Font name="System Bold" size="26.0" />
            </font>
        </Label>
        <ListView fx:id="listaZapisanychTaliiDoGry"
                  prefHeight="350.0" maxWidth="650.0" style="-fx-font-size: 16px; -fx-control-inner-background: rgba(0,0,0,0.7); -fx-control-inner-background-alt: rgba(15,15,15,0.7); -fx-focus-color: transparent; -fx-faint-focus-color: transparent;"/>
        <Label fx:id="etykietaSzczegolyTalii" minHeight="50.0" prefHeight="60.0" text="Szczegóły wybranej talii..." textFill="#c0c0c0" wrapText="true" />
        <Button fx:id="przyciskWybierzTalie" onAction="#handleWybierzTalieAction" prefWidth="250.0" text="Wybierz Tę Talię"
                style="-fx-font-size: 18px; -fx-background-color: black; -fx-text-fill: #FFD700; -fx-border-color: #DAA520; -fx-border-width: 1px; -fx-border-radius: 3px; -fx-background-radius: 3px;" />
        <Button fx:id="przyciskPowrotZWyboruTalii" onAction="#handlePowrotZWyboruTaliiAction" prefWidth="250.0" text="Powrót do Wyboru Trybu"
                style="-fx-font-size: 16px; -fx-background-color: black; -fx-text-fill: #FFD700; -fx-border-color: #DAA520; -fx-border-width: 1px; -fx-border-radius: 3px; -fx-background-radius: 3px;" />
    </children>
</VBox>